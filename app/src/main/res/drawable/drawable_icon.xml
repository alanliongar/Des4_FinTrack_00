<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Estado selecionado -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="4dp" android:color="@color/green" />
                    <size android:width="50dp" android:height="50dp" />
                </shape>
            </item>
            <item android:width="10dp" android:height="30dp" android:drawable="@drawable/empty" android:gravity="center" />
        </layer-list>
    </item>
    <item android:state_selected="false">
    <layer-list>
        <item>
            <shape>
                <stroke android:width="0.1dp" android:color="@color/black" />
                <size android:width="50dp" android:height="50dp" />
            </shape>
        </item>
        <item android:width="10dp" android:height="30dp" android:drawable="@drawable/empty" android:gravity="center" />
    </layer-list>
    </item>
</selector>
